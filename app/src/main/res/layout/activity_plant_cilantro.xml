<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenone"
    tools:context=".plant_cilantro">

    <ImageView
        android:id="@+id/imageCilantro"
        android:layout_width="250dp"
        android:layout_height="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/plantcilantro" />

    <TextView
        android:id="@+id/textCilantro"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Cilantro"
        android:textColor="@color/cWhite"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCilantro"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/textCilantroPH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pH:"
        android:textStyle="bold"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCilantro"
        app:layout_constraintVertical_bias="0.117" />

    <TextView
        android:id="@+id/textCilantroLH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Light hours:"
        android:textStyle="bold"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCilantroPH"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textCilantroTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Temperature:"
        android:textStyle="bold"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textCilantroLH"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textCilantroPHAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="6.0-6.7"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toEndOf="@+id/textCilantroPH"
        app:layout_constraintTop_toBottomOf="@+id/textCilantro" />

    <TextView
        android:id="@+id/textCilantroLHAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="14-18"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@+id/textCilantroLH"
        app:layout_constraintTop_toBottomOf="@+id/textCilantroPHAnswer" />

    <TextView
        android:id="@+id/textCilantroTempAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="50-80F"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/textCilantroTemperature"
        app:layout_constraintTop_toBottomOf="@+id/textCilantroLHAnswer" />
</androidx.constraintlayout.widget.ConstraintLayout>