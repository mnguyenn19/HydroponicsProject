<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenone"
    tools:context=".plant_watermelon">

    <ImageView
        android:id="@+id/imageWatermelon"
        android:layout_width="250dp"
        android:layout_height="224dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/plantwatermelon" />

    <TextView
        android:id="@+id/textWatermelon"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="Watermelon"
        android:textColor="@color/cWhite"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageWatermelon"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/textWatermelonPH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pH:"
        android:textStyle="bold"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.217"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWatermelon"
        app:layout_constraintVertical_bias="0.117" />

    <TextView
        android:id="@+id/textWatermelonLH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Light hours:"
        android:textStyle="bold"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.289"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWatermelonPH"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textWatermelonTemperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Temperature:"
        android:textStyle="bold"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.307"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textWatermelonLH"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textWatermelonPHAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="6.0-7.0"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toEndOf="@+id/textWatermelonPH"
        app:layout_constraintTop_toBottomOf="@+id/textWatermelon" />

    <TextView
        android:id="@+id/textWatermelonLHAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="08-12"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toEndOf="@+id/textWatermelonLH"
        app:layout_constraintTop_toBottomOf="@+id/textWatermelonPHAnswer" />

    <TextView
        android:id="@+id/textWatermelonTempAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="70-95F"
        android:textColor="@color/cWhite"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toEndOf="@+id/textWatermelonTemperature"
        app:layout_constraintTop_toBottomOf="@+id/textWatermelonLHAnswer" />
</androidx.constraintlayout.widget.ConstraintLayout>